    .popup-item .item-key, 
    .popup-item .item-value{
        display: inline-block;
        font-size: 12px;
        color: #555;
        padding:0 10px;
        line-height: 24px;
    }
    
    .popup-item:hover{
        background-color: #eee;
        color: #111;
        cursor: pointer;
    }

    .popup-item--active{
        background-color: #eee;
        color: #111;
    }

    .popup-loading{
        position: absolute;
        right: 5px;
        top:5px;
        display: none;
    }

    .popup-loading img{
        width: 25px;
        height: 25px;
    }
    .popup-not-found{
        font-size: 12px;
