<div id="dialog_popup"
     class="dialog-popup">
    <div class="popup-loading">
        <img src="/img/icon/loading.gif"/>
    </div>
    <p class="popup-not-found"><?= Util::translate("message.search.notfound") ?></p>
    <div class="popup-items"
         data-control="for: item in mapItems">
        <div class="popup-item"
             data-attr="data-index: item.$index">
            <span class="item-key"
                  data-item="item.key"></span>
            <span class="item-value"
                  data-item="item.value"></span>
        </div>
    </div>
</div>
